<div class="row col s12 " ng-init="setup()" onmouseover="setDynamicElements()">
    <div class="row col s10 offset-s1 card " id="browse_card" style="overflow-y: scroll">
        <div ng-if="articles.length!=0" style="height: inherit;">

            <div class="col s4 " id="article_tabs" onmouseover=""  style="height: inherit;">
                <div id = "SearchPanel2" class="input-field row col s12 left-align" style="" >
                    <a href="#" class="grey-text center-align" style="">
                        <i id ="SearchIcon2" class="mdi-action-search prefix"></i>
                    </a>
                    <input id="SearchBar2" placeholder="Search by Topic" type="search" class="validate z-depth-1" ng-model="query.topic" style="">

                </div>


                <ul class=" tabs collection center-align  " style="height:inherit; margin-top: 2%;overflow-y: scroll">


                    <li style="height:auto;width: auto;text-align: center" class=" col s12 collection-item avatar tab " ng-repeat="a in articles | filter : query " test-dir="">
                        <a href="#{{a._id}}">
                            <p class="title grey-text center center-align" style="white-space: normal;font-size:120%!important;  ">{{a.topic}}</p>


                            <h4 class="circle center-align Ac white-text " ng-if="a.main_category == 'Academics'">
                                <small>Ac</small>
                            </h4>
                            <h4 class="circle center-align St white-text " ng-if="a.main_category == 'Student Organization'">
                                <small>St</small>
                            </h4>
                            <h4 class="circle center-align Co white-text " ng-if="a.main_category == 'College'">
                                <small>Co</small>
                            </h4>
                            <h4 class="circle center-align Li white-text " ng-if="a.main_category == 'LifeHacks'">
                                <small>Li</small>
                            </h4>
                            <h4 class="circle center-align Ho white-text " ng-if="a.main_category == 'Hostel'">
                                <small>Ho</small>
                            </h4>
                            <h4 class="circle center-align Ar white-text " ng-if="a.main_category == 'Around VIT'">
                                <small>Ar</small>
                            </h4>
                            <p class="grey-text darken-1"  >{{a.sub_category}} </p>



                        </a></li>
                </ul>
            </div>
            <div class="col s8" id="articles" style="border-left: 1px rgba(0,0,0,0.2) solid;" >

                <div class="row" ng-repeat="a in articles" id="{{a._id}}" style="display:block" >
                    <div class="col s12">
                        <div class="">
                            <div class="card-title" style="box-shadow: 0 5px 2px 1px rgba(0,0,0,0.05)">
                                <ul class="collection left-align">
                                    <li class="collection-item avatar">
                                        <h4 class="circle center-align Ac white-text " ng-if="a.main_category == 'Academics'">
                                            <small>Ac</small>
                                        </h4>
                                        <h4 class="circle center-align St white-text " ng-if="a.main_category == 'Student Organization'">
                                            <small>St</small>
                                        </h4>
                                        <h4 class="circle center-align Co white-text " ng-if="a.main_category == 'College'">
                                            <small>Co</small>
                                        </h4>
                                        <h4 class="circle center-align Li white-text " ng-if="a.main_category == 'LifeHacks'">
                                            <small>Li</small>
                                        </h4>
                                        <h4 class="circle center-align Ho white-text " ng-if="a.main_category == 'Hostel'">
                                            <small>Ho</small>
                                        </h4>
                                        <h4 class="circle center-align Ar white-text " ng-if="a.main_category == 'Around VIT'">
                                            <small>Ar</small>
                                        </h4>

                                        <span class="title grey-text text-darken-2">{{a.topic}}</span>

                                        <p class="grey-text text-darken-2">{{a.sub_category}}</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-content">
                                <p class="grey-text text-darken-2"> {{a.content}}</p>
                            </div>
                            <div class="card-image">
                                <img src="img/sample-1.jpg" >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



<div ng-if="articles.length==0"  >
        <div class="col s12 ">
            <div class="card-title black-text center ">
                Article Not Found
            </div>
        </div>

    </div>
</div>
    </div>
