<div class="row">
    <div class=" col s4 grey-text center-align row" id="browser_suggestions">
        <h3>Suggestions</h3>
        <ul class="collection left-align col s10 offset-l1">
            <li class="collection-item avatar  z-depth-1">
                <a href="#">
                    <img src="img/user-default.png" alt="" class="circle">
                    <span class="title grey-text text-darken-2">FFCS</span>
                    <p class="grey-text" >Add / Drop </p>
                </a>
            </li>
            <li class="collection-item avatar  z-depth-1">
                <a href="#">
                    <img src="img/user-default.png" alt="" class="circle">
                    <span class="title grey-text text-darken-2">FFCS</span>
                    <p class="grey-text">Add / Drop </p>
                </a>
            </li>
            <li class="collection-item avatar  z-depth-1">
                <a href="#">
                    <img src="img/user-default.png" alt="" class="circle">
                    <span class="title grey-text text-darken-2">FFCS</span>
                    <p class="grey-text">Add / Drop </p>
                </a>
            </li>
            <li class="collection-item avatar  z-depth-1">
                <a href="#">
                    <img src="img/user-default.png" alt="" class="circle">
                    <span class="title grey-text text-darken-2">FFCS</span>
                    <p class="grey-text" >Add / Drop </p>
                </a>
            </li>
        </ul>
    </div>
    <div class=" col s8 grey-text center-align">
        <h3>Browse</h3>
        <div id = "SearchPanel2" class="input-field row col s12 left-align" style="position: relative; background-color: white!important;" >
            <form ng-submit="searchArt()">
            <button class="grey-text center-align" style="position: relative" type="submit">
                <i id ="SearchIcon2" class="mdi-action-search prefix"></i>
            </button>
            <input id="SearchBar2" placeholder="Search..." type="search" class="validate"  ng-model="search">
            <i class="mdi-navigation-close"></i>
            </form>
        </div>
        <div ng-if="articles">

            <div class="col s4 " id="article_tabs" style="display: none">
                <ul class=" collection center-align  z-depth-1-half " style=" height:auto;margin-top: 2%">
                    <li style="height:auto;width: auto;" class=" col s12 collection-item avatar " ng-repeat="a in articles"
                        test-dir=""><a href="#{{a._id}}">

                            <h4 class="circle center-align yellow white-text ">
                                <small>{{a.main_category}}</small>
                            </h4>
                            <span class="title grey-text text-daren-2">{{a.topic}}</span>

                            <p class="grey-text">{{a.sub_category}} </p>

                        </a></li>

                </ul>
            </div>
            <div class="col s12" id="articles" >

                <div class="row" ng-repeat="a in articles" id="{{a._id}}" style="display:block">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-title" style="box-shadow: 0 5px 2px 1px rgba(0,0,0,0.05)">
                                <ul class="collection left-align">
                                    <li class="collection-item avatar">
                                        <h4 class="circle center-align purple white-text ">
                                            <small>{{a.main_category}}</small>
                                        </h4>
                                        <span class="title grey-text text-darken-2">{{a.topic}}</span>

                                        <p class="grey-text">{{a.sub_category}}</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-content">
                                <p>{{a.content}}</p>
                            </div>
                            <div class="card-image">
                                <img src="img/sample-1.jpg">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div ng-if="articles.length==0">
            <div class="col s12 card">
                <div class="card-title black-text center ">
                    Article Not Found
                </div>
            </div>

        </div>
    </div>
</div>